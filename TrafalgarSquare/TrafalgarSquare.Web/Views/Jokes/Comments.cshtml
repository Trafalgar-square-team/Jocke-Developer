@using TrafalgarSquare.Web.ViewModels
@model List<CommentViewModel>
@{
    Layout = null;
}

@if (Model.Count == 0)
{
    <div class="well">
        There are no comments yet
    </div>
}
else
{
    foreach (var comment in Model)
    {
        <div class="well">
            @comment.User
            @comment.CreatedOn
            @comment.Text
        </div>
    }
}