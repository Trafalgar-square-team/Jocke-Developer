@model IEnumerable<TrafalgarSquare.Web.ViewModels.User.FreindViewModel>
@{
    Layout = null;
}
<table>
    <thead>
        <tr>
            <th>№</th>
            <th>Username</th>
            <th>Friend Status</th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
            foreach (var friend in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>
                        <img src="@friend.AvatarUrl" alt="avatar-@friend.Username" />
                        <a href="/User/Profile/@friend.Username">@friend.Username</a>
                    </td>
                    <td>
                        @if (friend.IsAcceptedFriendShip)
                        {
                            <span>Accepted</span>
                        }
                        else
                        {
                            <span>Waiting accpetance</span>
                        }
                    </td>
                </tr>
                        i++;
            }
        }

    </tbody>
</table>